<h1>閲覧</h1>
<div class="show">
  <li> 物件名:<%= @home.name %> </li>
  <li> 賃料:<%= @home.money %>円 </li>
  <li > 住所:<%= @home.address %> </li>
  <li> 築年数 <%= @home.age %>年 </li>
 
</div>
<div class="show">
  <% @home.detail.each_with_index do |detail, index| %>
    <h2>最寄り駅<%= index += 1 %></h2>
    <li> 路線名 <%= detail.route_name %> </li>
    <li> 駅名 <%= detail.station_name %> </li>
    <li> 徒歩分数 <%= detail.distance %>分 </li>
  <% end %>
</div>
<div>
  <%= link_to "編集", edit_home_path(@home) %>
  <%= link_to '戻る', homes_path %>
</div>
